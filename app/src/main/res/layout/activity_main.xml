<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@drawable/img">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:menu="@menu/brands_menu"
        android:theme="@style/CustomToolbar"
        app:popupTheme="@style/CustomPopupMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="115dp"
        android:src="@drawable/download"
        android:alpha=".2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/la_logo"
        android:layout_width="150dp"
        android:layout_height="115dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Pro"
        android:textColor="@color/white"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/la_logo" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="company"
        android:textColor="#FF9800"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
    <ImageView
        android:id="@+id/iv_apple"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/download"
        android:alpha=".4"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_company"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="130dp" />

    <ImageButton
        android:id="@+id/ib_apple"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/apple"
        android:layout_marginLeft="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_apple"
        app:layout_constraintEnd_toEndOf="@+id/iv_apple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_company" />

    <ImageView
        android:id="@+id/iv_samsung"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/download"
        android:alpha=".4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_apple"
        android:layout_marginRight="50dp"/>


    <ImageButton
        android:id="@+id/ib_samsung"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/samsungicon"
        app:layout_constraintBottom_toBottomOf="@id/iv_samsung"
        app:layout_constraintEnd_toEndOf="@id/iv_samsung"
        app:layout_constraintStart_toStartOf="@+id/iv_samsung"
        app:layout_constraintTop_toBottomOf="@id/tv_company" />

    <ImageView
        android:id="@+id/iv_google"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/download"
        android:alpha=".4"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ib_apple"
        app:layout_constraintStart_toStartOf="@id/ib_apple"
        app:layout_constraintEnd_toEndOf="@id/ib_apple"/>

    <ImageButton
        android:id="@+id/ib_google"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:background="@drawable/google"
        app:layout_constraintTop_toTopOf="@id/iv_google"
        app:layout_constraintStart_toStartOf="@id/iv_google"
        app:layout_constraintEnd_toEndOf="@id/iv_google"
        app:layout_constraintBottom_toBottomOf="@id/iv_google"/>

    <ImageView
        android:id="@+id/iv_oppo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/download"
        android:alpha=".4"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ib_samsung"
        app:layout_constraintStart_toStartOf="@id/ib_samsung"
        app:layout_constraintEnd_toEndOf="@id/ib_samsung"/>

    <ImageButton
        android:id="@+id/ib_oppo"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:background="@drawable/oppo"
        app:layout_constraintTop_toTopOf="@id/iv_oppo"
        app:layout_constraintStart_toStartOf="@id/iv_oppo"
        app:layout_constraintEnd_toEndOf="@id/iv_oppo"
        app:layout_constraintBottom_toBottomOf="@id/iv_oppo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Certified global smartphone  company"
        android:textColor="#FF9800"
        android:gravity="center"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>